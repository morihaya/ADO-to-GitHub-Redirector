{
  "manifest_version": 3,
  "name": "ADO to GitHub Redirector",
  "version": "1.0.0",
  "description": "Redirect Azure DevOps Repos URLs to corresponding GitHub URLs",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://dev.azure.com/*",
    "https://github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://dev.azure.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "ADO to GitHub Redirector",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}